  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "title": "Group",
  "description": "The Group resource for the API",
  "stability": "prototype",
  "strictProperties": true,
  "type": [
    "object"
  ],
  "definitions": {
    "id": {
      "description": "unique identifier of group",
      "readOnly": true,
      "type": [
        "integer"
      ],
      "example": 1294
    },
    "name": {
      "description": "name of group",
      "readOnly": true,
      "type": [
        "string"
      ],
      "example": "Warhamer Wednesdays"
    },
    "city": {
      "description": "city of group",
      "readOnly": true,
      "type": [
        "string"
      ],
      "example": "Baltimore"
    },
    "state": {
      "description": "state of group",
      "readOnly": true,
      "type": [
        "string"
      ],
      "example": "MD"
    },
    "country": {
      "description": "country of group",
      "readOnly": true,
      "type": [
        "string"
      ],
      "example": "USA"
    },
    "facebook": {
      "description": "facebook of group",
      "readOnly": true,
      "type": [
        "string"
      ],
      "example": "www.facebook.com/waagh"
    },
    "twitter": {
      "description": "twitter of group",
      "readOnly": true,
      "type": [
        "string"
      ],
      "example": "@waagh"
    },
    "identity": {
      "anyOf": [
        {
          "$ref": "/schemata/group#/definitions/id"
        }
      ]
    },
    "created_at": {
      "description": "when group was created",
      "format": "date-time",
      "type": [
        "string"
      ]
    },
    "updated_at": {
      "description": "when group was updated",
      "format": "date-time",
      "type": [
        "string"
      ]
    }
  },
